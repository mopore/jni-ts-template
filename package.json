{
  "name": "jni-ts-template",
  "version": "0.7.0",
  "description": "Template to start with a fresh TypeScript project.",
  "main": "App.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/mopore/jni-ts-template"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test": "mocha dist/test/**/*.js --recursive --exit",
    "build": "rm -rf ./dist && tsc -b",
    "start": "node dist/src/App.js",
    "build-image": "docker buildx build -t jni-ts-template .",
    "run-container": "docker container run --rm jni-ts-template \"I am set in package.json\""
  },
  "keywords": [
    "template",
    "TypeScript"
  ],
  "author": "jni@mopore.org",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "@types/sinon": "^10.0.16",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "chai": "^4.3.7",
    "eslint": "^8.47.0",
    "mocha": "^10.2.0",
    "sinon": "^15.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
